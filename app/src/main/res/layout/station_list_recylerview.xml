<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_station_root"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/stationlist_press_selector">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/item_station_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="标题"
            android:textColor="@color/station_name_color_selector"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item_station_metroLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/design_metroline"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/colorWhiteLight"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_station_metroLineSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/item_station_metroLine"
            android:background="@drawable/design_metroline"
            android:gravity="center"
            android:textColor="@color/colorWhiteLight"
            android:textSize="15sp"
            android:visibility="gone"/>

    </RelativeLayout>

</LinearLayout>


