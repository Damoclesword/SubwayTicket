<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimary_hunt</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_hunt</item>
        <item name="colorPrimaryDark">@color/colorPrimary_hunt</item>
        <item name="colorAccent">@color/colorAccent_hunt</item>
        <item name="android:statusBarColor">@color/colorPrimary_hunt</item>
    </style>

    <style name="LoginNoActionBar" parent="AppTheme.NoActionBar">

        <item name="android:statusBarColor">@android:color/background_light</item>
    </style>

    <style name="RegisterNoActionBar" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor">@color/colorWhiteLight</item>
    </style>
</resources>
